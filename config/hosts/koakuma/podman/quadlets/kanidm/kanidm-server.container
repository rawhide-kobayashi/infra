[Unit]
Description=Kanidm server container

[Container]
Image=docker.io/kanidm/server:1.8.5
ContainerName=kanidm-server
Mount=type=bind,src=/var/lib/containers/storage/volumes/kanidm,dst=/data
Pod=kanidm.pod
AddCapability=NET_BIND_SERVICE
User=1000
Group=1000

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target default.target